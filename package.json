{
  "name": "mcp-server",
  "version": "0.1.0",
  "description": "MCP (Modelo de Protocolo de Contexto) - MVP Server",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "mcp": "tsx mcp.ts",
    "mcp:stdio": "MCP_TRANSPORT=stdio tsx mcp.ts",
    "mcp:http": "MCP_TRANSPORT=http tsx mcp.ts",
    "mcp:ws": "MCP_TRANSPORT=websocket tsx mcp.ts",
    "mcp:hybrid": "MCP_TRANSPORT=hybrid tsx mcp.ts",
    "lint": "echo 'add your linter here'",
    "openapi": "echo 'openapi file at openapi.yaml'"
  },
  "dependencies": {
    "@fastify/helmet": "^11.0.0",
    "@fastify/rate-limit": "^8.0.0",
    "@modelcontextprotocol/sdk": "^0.6.0",
    "express": "^4.18.2",
    "fastify": "^4.27.2",
    "fastify-plugin": "^4.5.1",
    "ioredis": "^5.4.1",
    "pg": "^8.11.3",
    "undici": "^6.19.8",
    "uuid": "^9.0.1",
    "ws": "^8.16.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^20.19.11",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  }
}
